# LLM and Transcription Providers
LLM_PROVIDER=google # Options: google, groq, deepseek, local
TRANSCRIPTION_PROVIDER=groq # Options: groq
GOOGLE_API_KEY=your_gemini_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Local / On-Premise (OpenAI Compatible)
LOCAL_LLM_URL=http://localhost:1234/v1
LOCAL_LLM_API_KEY=not-needed
LOCAL_LLM_MODEL=

# MCP Server Configuration
MCP_SERVER_SSE_URL=http://127.0.0.1:8100/sse

# LinShare API Configuration
# These are REQUIRED for the tools to work
LINSHARE_USER_URL=https://your-linshare-instance.com/linshare/webservice/rest/user/v5
LINSHARE_JWT_TOKEN=your_jwt_token_here

# Optional: Admin/Delegation config if needed
# LINSHARE_ADMIN_URL=...
# LINSHARE_LDAP_CONNECTION_UUID=...

# --- OIDC Authentication (Chat Client) ---
# Authentication mode: 'none' (default) or 'oidc'
AUTH_TYPE=none

# Set these to enable native OpenID Connect login in Chainlit (only if AUTH_TYPE=oidc)
# Your OAuth2 Client ID from the OIDC provider
OIDC_CLIENT_ID=your_oidc_client_id
# Your OAuth2 Client Secret from the OIDC provider
OIDC_CLIENT_SECRET=your_oidc_client_secret
# The standard .well-known OIDC discovery URL
OIDC_CONFIG_URL=https://your-auth-server/.well-known/openid-configuration
# The callback URL (must be registered in your OIDC provider)
OIDC_REDIRECT_URI=http://localhost:8001/auth/oauth/callback
# Generate a random secret for session signing (e.g., openssl rand -hex 32)
CHAINLIT_AUTH_SECRET=your_chainlit_auth_secret_here
